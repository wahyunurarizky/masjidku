extends base

block content
  main.col-md-9.ms-sm-auto.col-lg-10.px-md-4
    .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
      h1.h2 Dashboard
    #carouselExampleSlidesOnly.carousel.slide(data-bs-ride='carousel')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='/assets/img/mjd.jpg' alt='...')
    .row.mt-3
      .four.col-md-3
        .counter-box.colored
          i.fa.fa-thumbs-o-up
          span.counter=nMasjid
          p Masjid
      .four.col-md-3
        .counter-box
          i.fa.fa-group
          span.counter=nWedding
          p Wedding Available
      .four.col-md-3
        .counter-box.colored
          i.fa.fa-shopping-cart
          span.counter=nLibrary
          p Library Available
      .four.col-md-3
        .counter-box
          i.fa.fa-user
          span.counter=nWorkshop
          p Workshop Available

